#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
void calcula();
int main()
{
    setlocale(LC_ALL,"portuguese");
    calcula();
    return 0;
}

void calcula()
{
    int valorN,a=1,b=1,auxiliar,div;
    float conta,controle=0;
    printf("(EX2) Diga o valor de N\n");
    scanf ("%d",&valorN);
    for (int i=2; i<=valorN; i++){
        div= i*2;
        auxiliar = a + b;
        a = b;
        b = auxiliar;

        if (conta>0)
        {
            conta= (float) a/div*(-1);
        }
        else {
            conta= (float) a/div;
        }
        controle = controle + conta;
    }
    controle = controle + 0.5;
    printf ("O valor ï¿½: %f",controle);

}
